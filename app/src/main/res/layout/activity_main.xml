<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/general">
<LinearLayout
    android:id="@+id/superior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario: "/>
        <TextView
            android:id="@+id/nombre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nombre"/>

        <Chronometer
            android:id="@+id/chronometer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"></Chronometer>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPalomo"
        android:layout_weight="1"
        android:orientation="horizontal"><!-- layout_weight medida de proporciÃ³n entre elementos respecto al padre-->
        <LinearLayout
            android:id="@+id/superiorizq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGris"
            android:orientation="horizontal"
            android:onClick="cambiaColor"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorAzul"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/cajita1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPollito"
                    android:orientation="horizontal"
                    android:onClick="cambiaColor">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cajita2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:onClick="cambiaColor">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cajita3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:onClick="cambiaColor">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cajita4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPollito"
                    android:orientation="horizontal"
                    android:onClick="cambiaColor">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPollito"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/barra1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPollito"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/barra2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/barra3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGris"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
    </LinearLayout>
        <LinearLayout
            android:id="@+id/barra4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGris"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tercio1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAzul"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
    </LinearLayout>
        <LinearLayout
            android:id="@+id/tercio2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRojo"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
    </LinearLayout>
        <LinearLayout
            android:id="@+id/tercio3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPalomo"
            android:orientation="horizontal"
            android:onClick="cambiaColor">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <!--Button
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="UN DOS TRES..."
        android:gravity="center"
        android:layout_gravity="center"
        android:onClick="ocultarBoton"
        /-->
    <LinearLayout
        android:id="@+id/lnOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="invisible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/refresh_white_36dp"
            android:onClick="jugardenuevo"
            android:padding="8dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/close_white_36dp"
            android:onClick="salir"
            android:padding="8dp"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/playbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:elevation="6dp"
        android:src="@drawable/play"
        android:onClick="star">
    </android.support.design.widget.FloatingActionButton>
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigate"
        android:visibility="gone">

    </android.support.design.widget.BottomNavigationView>
</FrameLayout>