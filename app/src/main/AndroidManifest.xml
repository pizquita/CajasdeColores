<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="basico.android.cftic.edu.cajasdecolores">

    <uses-permission
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_ic_icon_color_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ic_icon_color_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- De esta forma mantiene los -->
        <activity android:name=".MainActivity" />
        <activity android:name=".Inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListadoResultado"></activity>
    </application>

</manifest>